{
  "version": 2,
  "name": "notion-generator",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "HF_API_KEY": "@hf_api_key",
    "GITHUB_TOKEN": "@github_token",
    "NEXT_PUBLIC_APP_URL": "@next_public_app_url"
  },
  "functions": {
    "app/api/generate/route.ts": {
      "maxDuration": 30
    },
    "app/api/save/route.ts": {
      "maxDuration": 15
    },
    "app/api/health/route.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "framework": "nextjs"
}
